{
  "name": "agentic-best-practices",
  "version": "1.0.0",
  "description": "Best practices for building autonomous agents with AI",
  "private": true,
  "scripts": {
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\"",
    "validate": "bash ./scripts/validate-navigation.sh",
    "validate:adoption:sim": "bash ./scripts/simulate-adoption-check.sh",
    "adopt:help": "bash ./scripts/adopt-into-project.sh --help",
    "pilot:prepare:help": "bash ./scripts/prepare-pilot-project.sh --help",
    "pin:help": "bash ./scripts/pin-standards-version.sh --help",
    "merge:help": "bash ./scripts/merge-standards-reference.sh --help",
    "validate:adoption:help": "bash ./scripts/validate-adoption.sh --help",
    "precommit": "npm run lint:md && npm run validate && npm run validate:adoption:sim",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "markdownlint-cli2": "^0.20.0"
  },
  "keywords": [
    "ai",
    "agents",
    "best-practices",
    "autonomous-agents",
    "documentation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jer/agentic-best-practices"
  },
  "license": "MIT"
}
